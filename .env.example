# Copy this file to .env and fill values. Do NOT commit your real .env to source control.
# SMTP settings (for Gmail, use your full email and an App Password)


# Verified sender/from address (often must match your SMTP provider's verified identity)
SMTP_FROM=

# If you use port 587 with STARTTLS, set this (when SMTP_USE_SSL=0)
SMTP_USE_STARTTLS=

# Delivery tuning (lower timeout = faster failure; retries help transient issues)
SMTP_TIMEOUT=10
SMTP_RETRIES=2

# Optional (recommended for deployment): SendGrid Email API (HTTPS)
# Using HTTPS avoids SMTP port/network issues on some hosting providers.
SENDGRID_API_KEY=
SENDGRID_FROM=gariai360@gmail.com

# Email provider selection for OTP
# - auto (default): prefer SendGrid if configured else SMTP
# - sendgrid: force SendGrid only (recommended for Render)
# - smtp: force SMTP only
EMAIL_PROVIDER=auto

# Optional: Flask secret (fallback is already set in app)
FLASK_SECRET=

# Weather API key (OpenWeatherMap)
WEATHER_API_KEY=

# Gemini/Gemma (AI summary for /price?ai=1)
# Set one of these keys (preferred: GEMINI_API_KEY). Do NOT commit your real key.
GEMINI_API_KEY=
# Optional: some setups use GOOGLE_API_KEY instead
GOOGLE_API_KEY=

# Model name is configurable because Google model IDs can vary by platform.
# Default used by app.py: gemma-3-4b-it
GEMINI_MODEL=gemma-3-4b-it

# Optional: override API base if needed (default: https://generativelanguage.googleapis.com)
GEMINI_API_BASE=
